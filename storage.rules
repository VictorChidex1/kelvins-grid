rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is accessing their own folder
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Profile Pictures: Public Read, Owner Write
    // Path: /profile_pictures/{userId}/{filename}
    match /profile_pictures/{userId} {
      
      // 1. READ: Anyone can see the picture (Public Profile)
      allow read: if true;
      
      // 2. WRITE: Only the owner can upload, with strict validation
      allow write: if isOwner(userId)                   // Must match Auth ID
                   && request.resource.size < 2 * 1024 * 1024 // Max Size: 2MB (2 * 1024 * 1024 bytes)
                   && request.resource.contentType.matches('image/.*'); // Must be an image (png, jpg, etc.)
    }
    
    // Default: Deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
