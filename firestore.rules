rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user has 'admin' role
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Helper: Check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users Collection (RBAC Source of Truth)
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow creation ONLY if:
      // 1. It's their own ID
      // 2. They are NOT trying to make themselves admin (role must be 'customer')
      allow create: if isOwner(userId) && request.resource.data.role == "customer";
      
      // Allow updates if:
      // 1. It's their own ID OR they are an admin
      // 2. AND they are NOT changing their 'role' (Only admins can change roles)
      allow update: if (isOwner(userId) || isAdmin()) && 
                    (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']) || isAdmin());
    }

// Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is accessing their own folder
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Profile Pictures: Public Read, Owner Write
    match /profile_pictures/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) && request.resource.size < 2 * 1024 * 1024 && request.resource.contentType.matches('image/.*');
    }

    // Products: Public Read, Admin Write
    match /products/{product} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
